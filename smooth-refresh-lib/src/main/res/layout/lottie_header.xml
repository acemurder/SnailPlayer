            app:lottie_fileName="splashy_loader.json"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_colorFilter="@color/lottie_color_filter"/>


</me.dkzwm.smoothrefreshlayout.extra.header.LottieHeader>