<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
                name="avatarActionHandler"
                type="com.ride.snailplayer.framework.ui.me.AvatarActivity"/>

    </data>

    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context="com.stormouble.travelmeet.tranvelmeet.me.avatar.AvatarActivity">

        <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"/>

        <ImageView
                android:id="@+id/iv_avatar"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:scaleType="centerCrop"
                android:contentDescription="@null"
                android:transitionName="@string/transition_avatar"/>

        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">

            <TextView
                    android:id="@+id/tv_change_avatar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:layout_gravity="center"
                    android:text="@string/change_avatar"
                    android:textColor="@color/app_white"
                    android:textSize="14sp"
                    android:background="@drawable/selector_outline_btn"
                    android:clickable="true"
                    android:onClick="@{avatarActionHandler.onClick}"/>

        </FrameLayout>

    </LinearLayout>

</layout>

