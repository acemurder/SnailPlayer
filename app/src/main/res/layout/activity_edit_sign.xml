<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
                name="editSignActionHandler"
                type="com.ride.snailplayer.framework.ui.info.EditSignActivity"/>

    </data>

    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/dark_background">

        <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:theme="@style/ActionBarThemeOverlay"
                android:background="@color/theme_primary"
                app:contentInsetStart="0dp"
                app:popupTheme="@style/ActionBarPopupThemeOverlay">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                <ImageView
                        android:id="@+id/iv_edit_sign_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:padding="4dp"
                        android:clickable="true"
                        android:onClick="@{editSignActionHandler.onClick}"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_arrow_back"
                        android:scaleType="centerCrop"
                        android:contentDescription="@null"/>

                <TextView
                        android:id="@+id/tv_edit_sign_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/iv_edit_sign_back"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:text="@string/label_edit_user_nickname"
                        android:textColor="@color/app_white"
                        android:textSize="18sp"/>

                <TextView
                        android:id="@+id/tv_edit_sign_save"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="12dp"
                        android:padding="4dp"
                        android:clickable="true"
                        android:onClick="@{editSignActionHandler.onClick}"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:text="@string/save"
                        android:textColor="@color/app_white"
                        android:textSize="16sp"/>

            </RelativeLayout>

        </android.support.v7.widget.Toolbar>

        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="160dp"
                android:background="@color/app_white">

            <EditText
                    android:id="@+id/et_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@null"
                    android:inputType="text"
                    android:imeOptions="actionDone"
                    android:hint="@string/sign_hint"
                    android:textColorHint="@color/body_text_3"
                    android:textColor="@color/body_text_1"
                    android:textCursorDrawable="@drawable/shape_text_cursor_dark"
                    android:textSize="16sp"/>

            <TextView
                    android:id="@+id/tv_word_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="bottom|end"
                    android:text="150"
                    android:textSize="16sp"
                    android:textColor="@color/body_text_3"
                    android:clickable="false"/>

        </FrameLayout>

    </LinearLayout>

</layout>
