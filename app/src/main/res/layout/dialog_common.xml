<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <import type="android.view.View"/>

        <variable
                name="title"
                type="String"/>

        <variable
                name="content"
                type="String"/>

        <variable
                name="isSingleChoice"
                type="Boolean"/>

        <variable
                name="listener"
                type="com.ride.snailplayer.framework.event.listener.DataBindingClickListener"/>

    </data>

    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_round_dialog"
            android:orientation="vertical">

        <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/theme_primary"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="@dimen/padding_normal"
                android:layout_marginRight="@dimen/padding_normal"
                android:layout_gravity="center_horizontal"
                android:text="@{title}"
                android:textColor="@color/body_text_1"
                android:textSize="16sp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_normal"
                android:layout_marginBottom="@dimen/padding_normal"
                android:layout_marginLeft="@dimen/padding_normal"
                android:layout_marginRight="@dimen/padding_normal"
                android:gravity="start"
                android:text="@{content}"
                android:textColor="@color/body_text_1"
                android:textSize="16sp"/>

        <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/app_grey"
                android:clickable="false"
                android:focusable="false"/>

        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="48dp">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:baselineAligned="false">

                <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:visibility="@{isSingleChoice ? View.GONE : View.VISIBLE}">

                    <TextView
                            android:id="@+id/tv_common_dialog_cancel"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="@string/negative_text"
                            android:textColor="@color/body_text_1"
                            android:textSize="16sp"
                            android:background="?selectableItemBackground"
                            android:onClick="@{listener.onClick}"/>

                </FrameLayout>

                <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:visibility="@{isSingleChoice ? View.GONE : View.VISIBLE}">

                    <TextView
                            android:id="@+id/tv_common_dialog_confirm"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="@string/positive_text"
                            android:textColor="@color/body_text_1"
                            android:textSize="16sp"
                            android:background="?selectableItemBackground"
                            android:onClick="@{listener.onClick}"/>

                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/middle_line"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:visibility="@{isSingleChoice ? View.GONE : View.VISIBLE}"
                    tools:visibility="gone">

                <View
                        android:layout_width="0.1dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@color/app_grey"
                        android:clickable="false"
                        android:focusable="false"/>

            </LinearLayout>

            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:visibility="@{isSingleChoice ? View.VISIBLE : View.GONE}">

                <TextView
                        android:id="@+id/tv_common_dialog_single"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="@string/positive_text"
                        android:textColor="@color/body_text_1"
                        android:textSize="16sp"
                        android:background="?selectableItemBackground"
                        android:onClick="@{listener.onClick}"/>

            </FrameLayout>

        </FrameLayout>

    </LinearLayout>

</layout>
