<resources>

    <!-- Base application theme. -->
    <style name="Theme.SnailPlayer.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!--<item name="popupItemBackground">?android:selectableItemBackground</item>-->
        <!--<item name="photoItemForeground">?android:selectableItemBackground</item>-->
        <!--<item name="photoItemForegroundBorderless">?android:selectableItemBackground</item>-->

        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="colorAccent">@color/theme_primary</item>

        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>

        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back</item>

        <!--<item name="imageItemBackground">?android:selectableItemBackground</item>-->
    </style>

    <style name="Theme.SnailPlayer" parent="Theme.SnailPlayer.Base"/>

    <style name="ActionBarThemeOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="ActionBarPopupThemeOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="Theme.SnailPlayer.Welcome" parent="Theme.SnailPlayer">
        <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="Theme.SnailPlayer.Search" parent="Theme.SnailPlayer">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="searchViewStyle">@style/Widget.SnailPlayer.SearchView</item>
        <item name="autoCompleteTextViewStyle">@style/Widget.SnailPlayer.Search.AutoCompleteTextView</item>
        <item name="colorControlNormal">@color/app_primary_text</item>
        <item name="colorControlActivated">@color/theme_accent</item>
    </style>

    <style name="Widget.SnailPlayer.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="searchHintIcon">@null</item>
        <item name="queryBackground">@null</item>
        <item name="submitBackground">@null</item>
    </style>

    <style name="Widget.SnailPlayer.Search.AutoCompleteTextView" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:textColorHint">@color/app_primary_text</item>
        <!-- If set to @null the cursor will be displayed using android:textColor -->
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="Theme.SnailPlayer.Transparent" parent="Theme.SnailPlayer">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="PlayActivityTheme" parent="@style/Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>
