<resources>

    <!-- Base application theme. -->
    <style name="Theme.SnailPlayer.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="colorAccent">@color/theme_primary</item>

        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="Theme.SnailPlayer" parent="Theme.SnailPlayer.Base"/>

    <style name="ActionBarThemeOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="ActionBarPopupThemeOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="Theme.SnailPlayer.Welcome" parent="Theme.SnailPlayer">
        <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="Theme.SnailPlayer.Search" parent="Theme.SnailPlayer">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="SearchViewTheme" parent="ThemeOverlay.AppCompat.ActionBar">

    </style>

</resources>
